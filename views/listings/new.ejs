<% layout("/layouts/boilerplate.ejs") %>
<h3>Create a New Listing</h3>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <form method="POST" action="/listings" novalidate class="needs-validation" >
            <div class="mb-2">
                <label for="title" class="form-label">Title:</label>
                <input name="listing[title]" type="text" placeholder="Enter title" class="form-control" required>
                <div class="invalid-feedback">Title is required!</div>
            </div>

            <div class="mb-2">
                <label for="description" class="form-label">Add a description:</label>
                <textarea name="listing[description]" placeholder="Enter description" class="form-control" required></textarea>
                <div class="invalid-feedback">Description is required!</div>
            </div>

            <div class="mb-2">
                <label for="image" class="form-label">Add an image:</label>
                <input name="listing[image]" type="text" class="form-control" >
                <div class="invalid-feedback">Image link is required!</div>
            </div>

            <div class="row">
                <div class="mb-2 col-md-4">
                    <label for="price" class="form-label">Price:</label>
                    <input name="listing[price]" type="number" placeholder="Enter price" class="form-control" required>
                    <div class="invalid-feedback">Price is required!</div>
                </div>
                <div class="mb-2 col-md-8">
                    <label for="country" class="form-label">Country:</label>
                    <input name="listing[country]" type="text" placeholder="Enter country" class="form-control" required>
                    <div class="invalid-feedback">Country is required!</div>
                </div>
            </div>

            <div class="mb-2">
                <label for="location" class="form-label">Location:</label>
                <input name="listing[location]" type="text" placeholder="Enter location" class="form-control" required>
                <div class="invalid-feedback">Location is required!</div>
            </div>

            <button class="btn btn-danger mt-3 mb-3">Add</button>
        </form>
    </div>
</div>

